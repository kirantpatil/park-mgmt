<% if notice %>
  <div class="alert alert-info">
    <p id="notice"><%= notice %></p>
  </div>
<% end %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @building.name %></td>
      <td><%= @building.description %></td>
    </tr>
  </tbody>
</table>

<% if current_user_admin? %>
<%= link_to 'Edit', edit_building_path(@building), :class=>"btn btn-warning" %> |
<%= link_to 'Back', buildings_path, :class=>"btn btn-default" %>
<% end %>
