<p id="notice"><%= notice %></p>

<h1>Listing Buildings</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Floor</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @buildings.each do |building| %>
      <tr>
      <div class="col-xs-8 class">
        <td><%= building.name %></td>
        <td><%= building.description %></td>

        <% building.floors.each do |floor| %>
          <ul class="list-inline">
            <td><li> <h4> <%= floor.name %></h4> </li></td>
            <td><li> <%= link_to 'Show', floor, :class=>"btn btn-primary" %> </li></td>
          </ul>
        <% end %>
      </div>
        
        <div class="col-xs-4">
          <ul class="list-unstyled">
            <li> <h4> <%= building.name %> lots status </h4> </li>
            <li> <span class="label label-info">Slots Filled:</span> <div id="filled_b" style="display: inline-block;"> </div> </li>
            <li> <span class="label label-info">Slots Vacant:</span> <div id="vacant_b" style="display: inline-block;"> </div> </li>
            <li> <span class="label label-info">Total Slots:</span> <div id="total_b" style="display: inline-block;"> </div> </li>
          </ul>
        </div>


        <% if current_user_admin? %>
        <td><%= link_to 'Show', building %></td>
        <td><%= link_to 'Edit', edit_building_path(building) %></td>
        <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div id="btnTest"> </div>

<% if current_user_admin? %>
<%= link_to 'New Building', new_building_path %>
<% end %>
