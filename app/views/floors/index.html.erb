<p id="notice"><%= notice %></p>

<h1>Listing Floors</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image url</th>
      <th>Building name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @floors.each do |floor| %>
      <div class="col-xs-8 class">
      <tr>
        <td><%= floor.name %></td>
        <td><%= floor.image_url %></td>
        <td><%= floor.building.name %></td>
        <td><%= link_to 'Show', floor, :class=>"btn btn-success" %></td>
        <% if current_user_admin? %>
        <td><%= link_to 'Edit', edit_floor_path(floor), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', floor, :class=>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user_admin? %>
<%= link_to 'New Floor', new_floor_path, :class=>"btn btn-info" %>
<% end %>
