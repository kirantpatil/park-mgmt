<p id="notice"><%= notice %></p>

<h1>Listing Ccunits</h1>

<table class="table">
  <thead>
    <tr>
      <th>Ip</th>
      <th>Port</th>
      <th>Floor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ccunits.each do |ccunit| %>
      <div class="col-xs-8 class">
      <tr>
        <td><%= ccunit.ip %></td>
        <td><%= ccunit.port %></td>
        <td><%= ccunit.floor.name %></td>
        <% if current_user_admin? %>
        <td><%= link_to 'Show', ccunit, :class=>"btn btn-success" %></td>
        <td><%= link_to 'Edit', edit_ccunit_path(ccunit), :class=>"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', ccunit, :class=>"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user_admin? %>
<%= link_to 'New Ccunit', new_ccunit_path, :class=>"btn btn-info" %>
<% end %>
