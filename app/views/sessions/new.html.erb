
<div class="row">
  <div class="col-xs-4 col-xs-offset-2">
    <div class="page-header">
      <h3> Sign In <h3>
    </div>
    <%= form_tag(session_path) do %>
      <div class="form-group">
        <%= label_tag :email, "Email" %><br>
        <%= email_field_tag :email, nil, autofocus: true, :class=>"form-control", :id=>"emailField" %>
      </div>
      <div class="form-group">
        <%= label_tag :password, "Password" %><br>
        <%= password_field_tag :password, nil, :class=>"form-control", :id=>"passwordField" %>
      </div>
      <div class="form-group">
        <%= submit_tag "Sign In", :class=>"btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
