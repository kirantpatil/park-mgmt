<%= form_for(@user) do |f| %>
      <div class="form-group">
        <%= f.label :name, :for=>"nameField" %><br>
        <%= f.text_field :name, size: 40, autofocus: true, :class=>"form-control", :id=>"nameField" %>
      </div>
      <div class="form-group">
        <%= f.label :email, :for=>"emailField" %><br>
        <%= f.text_field :email, size: 40, :class=>"form-control", :id=>"emailField" %>
      </div>
      <div class="form-group">
        <%= f.label :password, :for=>"passwordField" %>
        <%= f.password_field :password, size: 40, :class=>"form-control", :id=>"passwordField" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", :for=>"passwdcfmField" %>
        <%= f.password_field :password_confirmation, size: 40, :class=>"form-control", :for=>"passwdcfmField" %>
      </div>
      <% if @user.new_record? %>
        <%= f.submit "Create Account", :class=>"btn btn-success" %>
      <% else %>
        <%= f.submit "Update Account", :class=>"btn btn-success" %>
      <% end %>
<% end %>
