<article id="user">
  <header>
    <h1><%= @user.name %></h1>
    <h2><%= @user.email %></h2>
  </header>
  <footer>
    <nav>
      <% if current_user?(@user) %>
      <%= link_to "Edit Account", edit_user_path(@user), :class=>"btn btn-warning" %>
      <%= link_to "Delete Account", @user, :class=>"btn btn-danger", 
                    method: :delete,
                    data: {confirm: 'Are you sure?' }
                    %>
      <% end %>
    </nav>
</article>
